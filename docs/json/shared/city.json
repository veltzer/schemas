{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "city.json",
	"description": "city element",
	"$defs": {
		"city": {
			"description": "A valid city name",
			"type": "string",
			"enum": [
				"Tel-Aviv",
				"Moscow",
				"Jerusalem",
				"London",
				"Barcelona",
				"New York",
				"Kiev",
				"Paris"
			]
		},
		"cities": {
			"description": "A collection of cities",
			"type": "array",
			"items": {
				"$ref": "#/$defs/city"
			}
		}
	}
}
